.counter
  font-size 30px
  font-weight bold
  margin 30px 0
.button
  width 100px
  height 40px
  color #fff
  font-size 14px
  border none
  outline none

.plusButton
  @extend .button
  background #23B036
  border-radius 0 5px 5px 0

.minusButton
  @extend .button
  background #D0111F
  border-radius 5px 0 0 5px